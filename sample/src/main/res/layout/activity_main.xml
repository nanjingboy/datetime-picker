<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/allButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="All Buttons"/>

        <RadioButton
            android:id="@+id/buttonsWithoutClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buttons Without Clear"/>
    </RadioGroup>

    <Button
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Picker"/>

    <Button
        android:id="@+id/datePickerWithoutDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Picker Without Day"/>

    <Button
        android:id="@+id/datetimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datetime Picker"/>
</LinearLayout>